{
  "manifest_version": 3,
  "name": "Job Application Automation",
  "version": "1.0.0",
  "description": "Automatically apply to jobs with AI-tailored resumes",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.indeed.com/*",
    "https://indeed.com/*",
    "https://wellfound.com/*",
    "https://*.wellfound.com/*",
    "https://www.linkedin.com/*",
    "https://*.linkedin.com/*",
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.indeed.com/*",
        "https://indeed.com/*",
        "https://*.wellfound.com/*",
        "https://wellfound.com/*",
        "https://*.linkedin.com/*",
        "https://linkedin.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.workday.com/*",
        "https://*.myworkdayjobs.com/*",
        "https://*.smartrecruiters.com/*",
        "https://*.jobvite.com/*"
      ],
      "js": ["auto-apply.js", "autofill.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
